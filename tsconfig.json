{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "rootDir": "./src",
      "baseUrl": "./src",
    "paths": {
      "@middleware/*": ["shared/middleware/*"]
    }
    },
    "include": ["src/**/*"]
  }